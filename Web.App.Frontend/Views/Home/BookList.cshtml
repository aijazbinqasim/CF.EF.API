@model IEnumerable<BookModel>

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>

<body>
    <h1>Book List</h1>

    <table width="50%" border="1">
        <thead>
            <tr>
                <th>S#</th>
                <th>ID</th>
                <th>Title</th>
                <th>Price</th>
                <th>ISBN</th>
            </tr>
        </thead>
        <tbody>
            @{
                var sno = 1;
            }
            @foreach (var book in Model)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Price</td>
                    <td>@book.ISBN</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>